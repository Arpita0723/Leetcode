class Solution {
public:
double myPow(double x, int n) {
    long long N = n;                
    if (N < 0) {                     
        x = 1 / x;
        N = -N;
    }
    return myPowHelper(x, N);       
}

double myPowHelper(double x, long long n) {
    if (n == 0) return 1;
    double half = myPowHelper(x, n / 2);
    if (n % 2 == 0) return half * half;
    else return half * half * x;
}

};
